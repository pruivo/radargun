<bench-config>
   <master
         bindAddress="${127.0.0.1:master.address}"
         port="${21032:master.port}"/>
   <benchmark
         initSize="${2:Islaves}"
         maxSize="${2:slaves}"
         increment="1">
      <DestroyWrapper
            runOnAllSlaves="true"/>
      <StartCluster
            staggerSlaveStartup="true"
            delayAfterFirstSlaveStarts="5000"
            delayBetweenStartingSlaves="1000"/>
      <ClusterValidation
            passiveReplication="false"
            partialReplication="true"/>
      <TpccPopulation
            preloadedFromDB="false"
            numWarehouses="2"
            cLastMask="0"
            olIdMask="0"
            cIdMask="0"
            threadParallelLoad="true"
            batchLevel="50"
            numLoaderThreads="2"/>
      <ResetStats />
      <CacheSize
            statName="CACHE_SIZE_BEFORE_BENCH" />
      <TpccBenchmark
            statsSamplingInterval="0"
            numOfThreads="2"
            perThreadSimulationTime="300"
            arrivalRate="0"
            accessSameWarehouse="true"
            paymentWeight="45"
            orderStatusWeight="5"/>
      <CacheSize
            statName="CACHE_SIZE_AFTER_BENCH" />
      <CsvReportGeneration/>
   </benchmark>
   <products>
      <infinispan4>
         <config name="ispn.xml"/>
      </infinispan4>
   </products>
   <reports>
      <report name="Reports" />
   </reports>
</bench-config>
