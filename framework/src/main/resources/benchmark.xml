<bench-config>
    <master
            bindAddress="${127.0.0.1:master.address}"
            port="${21031:master.port}"/>
    <benchmark
            initSize="${1:Islaves}"
            maxSize="${1:slaves}"
            increment="1">
        <DestroyWrapper
                runOnAllSlaves="true"/>
        <StartCluster
                staggerSlaveStartup="true"
                delayAfterFirstSlaveStarts="5000"
                delayBetweenStartingSlaves="1000"/>
        <ClusterValidation
                passiveReplication="false"
                partialReplication="false"/>
        <ClearCluster />
        <BankWarmup
                numberOfAccounts="10000"
                initialAmount="10000"/>
        <ResetStats />
        <BankBenchmark
                perThreadSimulTime="300"                                
                numOfThreads="2"
                coordinatorParticipation="true"
                transferPercentage="90"
                depositPercentage="0"
                withdrawPercentage="0"
                />
        <CacheSize
                statName="CACHE_SIZE" />
        <PrintDataContainer
                commitLogPrefix="clog"
                dataContainerPrefix="dc"
                />
        <CsvReportGeneration/>
    </benchmark>
    <products>
        <infinispan4>
            <config name="ispn.xml"/>
        </infinispan4>
    </products>
    <reports>
        <report name="Reports" />
    </reports>
</bench-config>
